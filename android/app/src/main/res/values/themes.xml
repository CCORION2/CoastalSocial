<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Theme -->
    <style name="Theme.CoastalSocial" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/coastal_blue</item>
        <item name="android:colorPrimaryDark">@color/coastal_blue_dark</item>
        <item name="android:colorAccent">@color/coastal_teal</item>
        <item name="android:statusBarColor">@color/coastal_blue</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.CoastalSocial.Splash" parent="Theme.CoastalSocial">
        <item name="android:windowBackground">@color/coastal_blue</item>
        <item name="android:statusBarColor">@color/coastal_blue</item>
    </style>
</resources>
